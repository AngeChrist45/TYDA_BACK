
NODE_ENV=development
PORT=5000

MONGODB_URI=mongodb://localhost:27017/tyda_vente
MONGODB_TEST_URI=mongodb://localhost:27017/tyda_vente_test

JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Sécurité - Tentatives de connexion PIN
MAX_PIN_ATTEMPTS=5
PIN_LOCK_TIME=15

EMAIL_FROM=noreply@tydavente.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Configuration SMS (Twilio pour vérification téléphone)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==================== STOCKAGE MÉDIAS ====================
# Configuration Cloudinary (pour les images produits)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Limites fichiers
MAX_FILE_SIZE=5000000
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# ==================== PAIEMENTS ====================
# Configuration Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================== URLs FRONTEND ====================
FRONTEND_WEB_URL=http://localhost:3000
FRONTEND_MOBILE_URL=exp://localhost:19000

# ==================== BOT DE NÉGOCIATION ====================
BOT_NAME=TYDA Bot
BOT_RESPONSE_DELAY=2000
BOT_MAX_ROUNDS=5
MIN_NEGOTIATION_AMOUNT=5000
MAX_NEGOTIATION_PERCENTAGE=30

# ==================== DÉVELOPPEMENT ====================
SEED_DATABASE=false
ENABLE_CORS=true
LOG_LEVEL=info

# ==================== OPTIONNEL ====================
# Redis (pour le cache)
REDIS_URL=redis://localhost:6379

# Firebase (pour notifications push mobile)
FCM_SERVER_KEY=your-firebase-server-key

# Google Maps (pour géolocalisation)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
