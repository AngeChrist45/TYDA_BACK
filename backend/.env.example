# Configuration de l'environnement TYDA Vente
# Copiez ce fichier vers .env et remplissez avec vos vraies valeurs

# Environnement de développement
NODE_ENV=development

# Port du serveur
PORT=5000

# Base de données MongoDB
# Exemple local: mongodb://localhost:27017/tyda-vente
# Exemple cloud: mongodb+srv://username:password@cluster.mongodb.net/tyda-vente
MONGODB_URI=mongodb://localhost:27017/tyda-vente

# Secret JWT (générez une chaîne aléatoire sécurisée)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Configuration Email (pour la vérification et notifications)
EMAIL_FROM=noreply@tydavente.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Configuration Cloudinary (pour les images)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Configuration Stripe (pour les paiements)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# URL Frontend (pour les redirections et CORS)
FRONTEND_WEB_URL=http://localhost:3000
FRONTEND_MOBILE_URL=exp://localhost:19000

# Configuration Redis (optionnel, pour le cache)
REDIS_URL=redis://localhost:6379

# Configuration des notifications push (optionnel)
FCM_SERVER_KEY=your-firebase-server-key

# Configuration des logs
LOG_LEVEL=info

# Sécurité - Tentatives de connexion
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=30

# Configuration de développement
SEED_DATABASE=false
ENABLE_CORS=true

# Configuration des fichiers
MAX_FILE_SIZE=5000000
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Configuration négociation bot
BOT_RESPONSE_DELAY=2000
BOT_MAX_ROUNDS=5

# Configuration géolocalisation (optionnel)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Configuration SMS (optionnel, pour les notifications)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/tyda_vente
MONGODB_TEST_URI=mongodb://localhost:27017/tyda_vente_test

# JWT Configuration
JWT_SECRET=votre_jwt_secret_super_securise_ici
JWT_EXPIRES_IN=7d

# Configuration du serveur
PORT=5000
NODE_ENV=development

# Configuration Cloudinary (pour upload d'images)
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# Configuration email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre_email@gmail.com
EMAIL_PASS=votre_mot_de_passe_app

# Configuration Stripe (pour paiements)
STRIPE_SECRET_KEY=sk_test_votre_cle_stripe
STRIPE_WEBHOOK_SECRET=whsec_votre_webhook_secret

# Configuration de l'application
FRONTEND_WEB_URL=http://localhost:3000
FRONTEND_MOBILE_URL=http://localhost:19006
ADMIN_EMAIL=admin@tydavente.com
ADMIN_PASSWORD=Admin@123456

